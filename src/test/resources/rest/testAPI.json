{
    "defaultFormat":"calc",
	"resources":{
		"thing":{
			"list":{
                "projectionMaxByType": {
                    "calc":1,
                    "referenced": 100
                },
				"parameters":[
					{
						"id":"name",
						"required":false,
						"type":"string"
					},
					{
						"id":"anotherProperty",
						"required":false,
						"type":"string"						
					},
					{
						"id":"uuid",
						"required":false,
						"type":"string"
					},
                    {
                        "id":"format",
                        "description":"format type for the project.",
                        "type": "string",
                        "enum": ["calc", "referenced"]
                    }
				]
			},
			"show":{
				"parameters":[
					{
						"id":"_id",
						"required":true,
						"type":"string"
					}
				]
			},
			"save":{
				"parameters":[
					{
						"id":"project",
						"schema":"/v1/schema/spidacalc/calc/project.schema",
						"required":true
					}
				]
			},
			"saveMultipleParams":{
				"atLeastOneParamRequired":["project", "filefortUuid"],
				"parameters":[
					{
						"id":"project",
						"schema":"/v1/schema/spidacalc/calc/project.schema",
						"required":false
					},
					{
						"id":"filefortUuid",
						"description":"The uuid of the exchange file in filefort.",
						"type":"string",
						"required":false
					}
				]
			},
			"update":{
				"parameters":[
					{
						"id":"project",
						"schema":"/v1/schema/spidacalc/calc/project.schema",
						"required":true
					},
					{
						"id":"_id",
						"type":"string",
						"required":true
					}
				]
			},
			"delete":{
				"parameters":[
					{
						"id":"_id",
						"type":"string",
						"required":true
					}
				]
			}
		}
	},
	"projection":{
		"parameters":[
			{
				"id":"skip",
				"type":"number",
				"required":false,
				"defaultValue":0
			},
			{
				"id":"limit",
				"type":"number",
				"required":false,
				"defaultValue":50
			}
		]
	}
}